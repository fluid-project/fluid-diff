{
    "sources": {
        "md":    [ "./*.md", "./src/**/*.md", "./tests/**/*.md", "./docs/**/*.md"],
        "js":    ["./src/**/*.js", "./tests/**/*.js", "./*.js"],
        "json":  ["./src/**/*.json", "tests/**/*.json", "./*.json"],
        "json5": ["./src/**/*.json5", "tests/**/*.json5", "./*.json5"],
        "other": ["./.*"]
    },
    "eslint": {
        "md": {
            "options": {
                "overrideConfig": {
                    "rules": {
                        "no-redeclare": 0
                    }
                }
            }
        }
    },
    "lintspaces": {
        "newlines": {
            "excludes": ["./src/templates/**/*.handlebars", "./tests/templates/**/*.handlebars"]
        }
    }
}
